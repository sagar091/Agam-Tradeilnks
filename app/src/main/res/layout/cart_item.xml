<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: Porche"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: 90908"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtSubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: 90908"
                    android:textSize="14sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45">

                <TextView
                    android:id="@+id/txtQty"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/round_text"
                    android:gravity="center"
                    android:text="35"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/qty"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/remove"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_delete" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btnScheme"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtColors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Colors:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtSelectedScheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Scheme: Buy 1 at Rs 4433:"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.rey.material.widget.Button
                android:id="@+id/btnScheme"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:background="@color/button_bg"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Select Scheme"
                android:textColor="#ffffff"
                android:textSize="12sp"
                app:rd_enable="true"
                app:rd_rippleColor="@color/button_ripple"
                app:rd_rippleType="touch" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>